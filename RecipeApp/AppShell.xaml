<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RecipeApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RecipeApp"
    Shell.FlyoutBehavior="Disabled"
    Title="RecipeApp">
    <TabBar>
        <Tab Title="Recipes"
             Icon="chefhat">
             <ShellContent
                Title="Recipes"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />          
        </Tab>
        <Tab Title="About"
             Icon="info">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Views.AboutPage}"
                Title="About"
                Route="AboutPage"/>
        </Tab>
        <Tab Title="Map"
             Icon="pointonmap">
            <ShellContent 
                ContentTemplate="{DataTemplate local:Views.MapPage}"
                Title="Map"
                Route="MapPage"/>
        </Tab>


    </TabBar>
</Shell>
